<div class="add-files-container">
  <label class="">Add your files</label>
  <div class="file-upload-dropzone">
    <div class="file-upload-text-container">
      <span class="hidden-sm hidden-md hidden-lg" style="margin-right:5px;">Drag files here or </span>
      <span class="hidden-xs" style="margin-right:5px;">Drag and drop files here or </span>
      <div class="btn btn-lg btn-primary btn-file-upload">
        <span class="">Select files</span>
        <input type="file" name="files[]" multiple>
      </div>
    </div>
  </div>
  <p class="add-files-error-block error-block"></p>
</div>
